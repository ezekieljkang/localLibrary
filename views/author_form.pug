extends layout

block content
  h1= title

  form(method='POST' action='')
    if errors
      ul
        each error in errors
          li= error.msg

    div.form-group
      label(for='first_name') First Name:
      input#first_name.form-control(type='text', name='first_name', required=true, value=author ? author.first_name : '')

    div.form-group
      label(for='family_name') Family Name:
      input#family_name.form-control(type='text', name='family_name', required=true, value=author ? author.family_name : '')

    div.form-group
      label(for='date_of_birth') Date of Birth:
      input#date_of_birth.form-control(type='date', name='date_of_birth', value=author && author.date_of_birth ? author.date_of_birth.toISOString().substring(0, 10) : '')

    div.form-group
      label(for='date_of_death') Date of Death:
      input#date_of_death.form-control(type='date', name='date_of_death', value=author && author.date_of_death ? author.date_of_death.toISOString().substring(0, 10) : '')

    button.btn.btn-primary(type='submit') Submit
