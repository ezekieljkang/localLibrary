extends layout

block content

  h1 Title: #{book.title}

  if bookInstances && bookInstances.length > 0

    p #[strong Delete the following book instances before attempting to delete this book.]
    div(style='margin-left:20px;margin-top:20px')
      h4 Book Instances
      dl
        each bookInstance in bookInstances
          dt
            a(href=bookInstance.url) #{bookInstance.book.title}
          dd #{bookInstance.imprint}

  else
    p Do you really want to delete this Book?

    form(method='POST')
      div.form-group
        input#bookid.form-control(type='hidden', name='bookid', value=book._id )

      button.btn.btn-primary(type='submit') Delete
